# The -w argument make the command wait for Vim to close the file, before continuing
export EDITOR='vim -w'
# Setting for the new UTF-8 terminal support in Snow Leopard
#export LC_CTYPE=en_US.UTF-8
#export LC_ALL=en_US.UTF-8
# This put in our path NodeJS, so first we should run `brew install
# node`
export NODE_PATH="/usr/local/lib/node"
#export PATH="/usr/local/share/npm/bin:$PATH"
# Only if RVM it's installed
# Add RVM to PATH for scripting
PATH=$PATH:$HOME/.rvm/bin:/usr/local/share/npm/bin:$PATH
# Load RVM functions
[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"
# Load compiler only if https://github.com/kennethreitz/osx-gcc-installer is installed
export CC=gcc-4.2
